<fields>
    <field name="_version_"         type="long"             indexed="true"  stored="true"                   multiValued="false" omitNorms="true" />
    <field name="indexStamp"        type="long"             indexed="true"  stored="false" required="false" multiValued="false" omitNorms="true" />
    <field name="id"                type="string"           indexed="true"  stored="true"  required="true"  multiValued="false" omitNorms="true" />  

    <field name="brand"             type="string"           indexed="true"  stored="true"  required="false" multiValued="false" omitNorms="true" />
    <field name="description"       type="string"           indexed="true"  stored="true"  required="false" multiValued="false" omitNorms="true" />
    <field name="displayName"       type="string"           indexed="true"  stored="true"  required="false" multiValued="false" omitNorms="true" />
    <field name="keywords"          type="string"           indexed="true"  stored="true"  required="false" multiValued="false" omitNorms="true" />
    <field name="longDescription"   type="string"           indexed="true"  stored="true"  required="false" multiValued="false" omitNorms="true" />

    <!-- catch all and ignore -->
    <dynamicField name="*" type="ignored" multiValued="true" />
</fields>